@if (User.Identity.IsAuthenticated)
{
    <form method="GET" class="form-inline" asp-page="/Logout">
        <div class="form-group">
            <span class="mr-2">Welcome @User.Identity.Name</span>
            <button type="submit" class="btn btn-link text-dark">Logout</button>
        </div>
    </form>
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Register">Register</a>
        </li>
    </ul>
}